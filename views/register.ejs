<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
    <div class="w-[30vw] bg-white px-20 py-10 rounded-[30px]">
      <h1 class="text-3xl mb-10 text-center tracking-tighter capitalize font-semibold text-zinc-700 leading-none">create new account.</h1>
      <form action="/register" method="post">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="username">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="fullname" placeholder="Full Name">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="email" name="email" placeholder="email">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="number" name="contact" placeholder="contact">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="password">
       
        <input class="border-2 rounded-full block mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full cursor-pointer hover:bg-red-500" type="submit" value="Create New Account">
        <p class="text-xs font-semibold text-zinc-700 mt-2 text-center mt-7 w-3/4 mx-auto">By continuing, you agree to Pinterest's Terms of Service.Open a new tab and you've read our Privacy Policy.</p>
       
      </form>
      <a class="inline-block mt-2 text-sm font-semibold text-zinc-700 text-center w-full" href="/">Login existing account</a>
    </div>
  </div>
<% include ./partials/footer.ejs %> 